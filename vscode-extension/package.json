{
  "name": "commity-ai-commit-tool",
  "displayName": "Commity - AI Commit Tool",
  "description": "Generate intelligent Git commit messages using AI with dynamic emoji selection",
  "version": "1.0.8",
  "icon": "logo.png",
  "publisher": "emeenx",
  "repository": {
    "type": "git",
    "url": "https://github.com/muhd-ameen/Commity.git"
  },
  "homepage": "https://github.com/muhd-ameen/Commity",
  "bugs": {
    "url": "https://github.com/muhd-ameen/Commity/issues"
  },
  "license": "MIT",
  "author": "Muhammad Ameen",
  "keywords": [
    "git",
    "commit",
    "ai",
    "openai",
    "emoji",
    "automation",
    "productivity"
  ],
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commity.generateCommit",
        "title": "Generate AI Commit Message",
        "category": "Commity"
      }
    ],
    "configuration": {
      "title": "Commity",
      "properties": {
        "commity.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "Your OpenAI API key (get from https://platform.openai.com/api-keys)"
        },
        "commity.openaiModel": {
          "type": "string",
          "default": "gpt-4o-mini",
          "enum": [
            "gpt-4o-mini",
            "gpt-4o",
            "gpt-4-turbo",
            "gpt-3.5-turbo"
          ],
          "description": "OpenAI model to use for generating commit messages"
        },
        "commity.enableEmojis": {
          "type": "boolean",
          "default": true,
          "description": "Enable dynamic emoji selection in commit messages"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "openai": "^4.0.0",
    "simple-git": "^3.20.0"
  }
}
